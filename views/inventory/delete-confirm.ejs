<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <form action="/inv/delete" method="POST" id="inventory-form">
        <label for="inv_makel">Make:</label><br>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly><br>

        <label for="inv_model">Model:</label><br>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly><br>
        
        <label for="inv_year">Year:</label><br>
        <input type="text" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" readonly><br>

        <label for="inv_price">Price:</label><br>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly><br>
        
        <div class="center-button-container">
            <button type="submit">Delete Vehicle</button>
        </div>
        
        <p>Confirm Deletion - The delete is permanent.</p>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>


    