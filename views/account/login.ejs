<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

<form action="account/login" method="POST" id="login-form">
    <label for="email">Email:</label><br>
    <input type="email" class="email" name="email" required><br>
    <label for="password">Password:</label><br>
    <span>(Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character)</span> 
    <input type="password" class="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <div class="center-button-container">
        <button type="submit">Submit</button>
    </div>
</form>

<a href="/account/register">Don't have an account? Register here.</a>